{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "esModuleInterop": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2022",
    "moduleResolution": "bundler",
    "experimentalDecorators": true,
    "target": "es2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "paths": {
      "ng-bootstrap-form-validation": [
        "dist/ng-bootstrap-form-validation"
      ],
      "ng-bootstrap-form-validation/*": [
        "dist/ng-bootstrap-form-validation/*"
      ]
    }
  }
}
